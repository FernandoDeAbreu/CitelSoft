@model CitelSoftware.Models.CategoriaViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-4">
    <h1>Edit</h1>

    <h4>CategoriaViewModel</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Id" class="control-label">ID:</label>
                    <input asp-for="Id" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="Descricao" class="control-label">Descrição:</label>
                    <input asp-for="Descricao" class="form-control" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" value="Save" class="btn btn-primary">Salvar</button>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Voltar para a Lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
